<p style="color: green"><%= notice %></p>

<div class="row justify-content-center mt-4">
   <div class="col-lg-2">
        <p>Product Name</p>
   </div>

   <div class="col-lg-2">
         <%= @product.product_name %>
   </div>
</div>

<div class="row justify-content-center mt-4">
   <div class="col-lg-2">
        <p>Price</p>
   </div>

   <div class="col-lg-2">
         <%= @product.price %>
   </div>
</div>

<div class="row justify-content-center mt-4">
   <div class="col-lg-2">
        <p>Description</p>
   </div>

   <div class="col-lg-2">
         <%= @product.description %>
   </div>
</div>

<div class="row justify-content-center mt-4">
   <div class="col-lg-2">
         <%= link_to "Back To Home", products_path, class:"btn btn-primary m-4" %>
   </div>
 
</div>
