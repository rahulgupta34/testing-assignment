<p style="color: green"><%= notice %></p>

<h1 class="text-center">Products</h1>

<table class="table">
<%= link_to "New product", new_product_path, class:"btn btn-primary m-4" %>
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Product Name</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col">Show</th>
      <th scope="col">Edit</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <th scope="row"><%= product.id %></th>
      <td><%= product.product_name %></td>
      <td><%= product.price %></td>
      <td><%= product.description %></td>
      <td><%= link_to "Show", product_path(product.id), class:"btn btn-success" %></td>
       <td><%= link_to "Edit", edit_product_path(product.id), class:"btn btn-success" %></td>
        <td><%= button_to "Delete", product_path(product.id), method: :delete, class:"btn btn-success" %></td>
    </tr>
   <% end %>
  </tbody>
</table>

